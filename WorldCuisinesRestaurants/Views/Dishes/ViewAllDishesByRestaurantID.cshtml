@model IEnumerable<WorldCuisinesRestaurants.Models.Dish>
@{
    ViewBag.Title = "ViewAllDishesByRestaurantID";


}

<h4> Dishes of Restaurant @ViewBag.Restaurant</h4>

@using (Html.BeginForm("DishesChosen", "Dishes", FormMethod.Post))
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                Quantity
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                   
                    @Html.DropDownList("quantity", ViewBag.List as SelectList);
                    <input type="hidden" name="item" value="@item.ID"/>

                </td>

            </tr>

        }


    </table>

    <button type="submit"> CHOOSE </button>

}
